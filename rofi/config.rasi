@theme "~/.config/rofi/classic.rasi"

configuration {
	modi: "window,run,drun,ssh";
	show-icons: true;
	icon-theme: "Papirus";
	terminal: "zsh";
	drun-match-fields: "name,generic,exec,categories,keywords";
	drun-display-format: "{icon} {name}";
	display-window: "Windows";
	display-run: "Exec";
	display-ssh: "Ssh";
	display-drun: "Apps";
}
